html
  head
    title= title 
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl' crossorigin='anonymous')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js' integrity='sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0' crossorigin='anonymous')
    script(src='../static/JS/script.js' defer)

    link(rel="shortcut icon" type="image/x-icon" href="../static/images/favicon.png")
    
    //- Bootswatch for the register/login pages
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootswatch@4.6.0/dist/journal/bootstrap.min.css")
    
    link(rel='stylesheet' href='https://use.fontawesome.com/releases/v5.15.3/css/all.css' integrity='sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk' crossorigin='anonymous')
    link(rel="stylesheet" href="../static/CSS/style.css") 
  body
    header
        nav.navbar.navbar-expand-lg.navbar-light.bg-light
            .container-fluid
                a.navbar-brand(href='/') 
                    img(src="../static/images/favicon.png" id='logo' alt="Picarousel Logo") 
                    ="Picarousel"
                button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarNavAltMarkup' aria-controls='navbarNavAltMarkup' aria-expanded='false' aria-label='Toggle navigation')
                    span.navbar-toggler-icon
                #navbarNavAltMarkup.collapse.navbar-collapse.nav-flex
                    .navbar-nav
                        a.nav-link.active(aria-current='page' href='/photos') Photos
                        if currentUser
                            a.nav-link(href='/profile') Profile
                        a.nav-link.disabled(href='#' tabindex='-1' aria-disabled='true')
                    if !currentUser    
                        .login
                            button.btn.btn-light.btn-login(type='button' data-bs-toggle='modal' data-bs-target='#signInModal') Log In
                    else
                        .logout
                            h1.welcome-name= "Welcome " + currentUser.name + "!"
                            a(href="/users/logout" class="btn btn-primary") Logout        
    main
        section#modal
            #signInModal.modal.fade(tabindex='-1' aria-labelledby='signInModalLabel' aria-hidden='true')
                .modal-dialog
                    .modal-content.card.card-body.text-white.bg-secondary.text-center
                        button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
                        p Create an account or login
                        a.btn.btn-primary.btn-block.mb-2(href='/users/register') Register
                        a.btn.btn-success.btn-large(href='/users/login') Login
    
    block content
    
    include includes/foot.pug